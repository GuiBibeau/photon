{
  "name": "@photon/errors",
  "version": "0.0.0",
  "description": "Error handling utilities for Photon SDK",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./codes": {
      "types": "./dist/codes.d.ts",
      "import": "./dist/codes.js",
      "require": "./dist/codes.cjs"
    },
    "./error": {
      "types": "./dist/error.d.ts",
      "import": "./dist/error.js",
      "require": "./dist/error.cjs"
    },
    "./factories": {
      "types": "./dist/factories.d.ts",
      "import": "./dist/factories.js",
      "require": "./dist/factories.cjs"
    },
    "./rpc-mapper": {
      "types": "./dist/rpc-mapper.d.ts",
      "import": "./dist/rpc-mapper.js",
      "require": "./dist/rpc-mapper.cjs"
    },
    "./validation-mapper": {
      "types": "./dist/validation-mapper.d.ts",
      "import": "./dist/validation-mapper.js",
      "require": "./dist/validation-mapper.cjs"
    },
    "./enhancer": {
      "types": "./dist/enhancer.d.ts",
      "import": "./dist/enhancer.js",
      "require": "./dist/enhancer.cjs"
    },
    "./recovery": {
      "types": "./dist/recovery.d.ts",
      "import": "./dist/recovery.js",
      "require": "./dist/recovery.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --check \"src/**/*.{ts,tsx}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "size": "echo \"Size analysis not yet configured\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GuiBibeau/photon.git",
    "directory": "packages/errors"
  },
  "license": "MIT",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
