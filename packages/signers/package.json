{
  "name": "@photon/signers",
  "version": "0.0.0",
  "description": "Signer utilities for Photon SDK",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./interface": {
      "types": "./dist/interface.d.ts",
      "import": "./dist/interface.js",
      "require": "./dist/interface.cjs"
    },
    "./multi-signer": {
      "types": "./dist/multi-signer.d.ts",
      "import": "./dist/multi-signer.js",
      "require": "./dist/multi-signer.cjs"
    },
    "./guards": {
      "types": "./dist/guards.d.ts",
      "import": "./dist/guards.js",
      "require": "./dist/guards.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --check \"src/**/*.{ts,tsx}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "size": "echo \"Size analysis not yet configured\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GuiBibeau/photon.git",
    "directory": "packages/signers"
  },
  "license": "MIT",
  "sideEffects": false,
  "dependencies": {
    "@photon/addresses": "workspace:*",
    "@photon/crypto": "workspace:*",
    "@photon/errors": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}
