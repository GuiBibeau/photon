{
  "name": "@photon/react",
  "version": "0.0.0",
  "description": "React hooks and components for Photon SDK - Zero-dependency wallet connection and Solana interactions",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./providers": {
      "types": "./dist/providers.d.ts",
      "import": "./dist/providers.mjs",
      "require": "./dist/providers.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.mjs",
      "require": "./dist/hooks/index.js"
    },
    "./hooks/wallet": {
      "types": "./dist/hooks/wallet.d.ts",
      "import": "./dist/hooks/wallet.mjs",
      "require": "./dist/hooks/wallet.js"
    },
    "./hooks/balance": {
      "types": "./dist/hooks/balance.d.ts",
      "import": "./dist/hooks/balance.mjs",
      "require": "./dist/hooks/balance.js"
    },
    "./hooks/transaction": {
      "types": "./dist/hooks/transaction.d.ts",
      "import": "./dist/hooks/transaction.mjs",
      "require": "./dist/hooks/transaction.js"
    },
    "./hooks/tokens": {
      "types": "./dist/hooks/tokens.d.ts",
      "import": "./dist/hooks/tokens.mjs",
      "require": "./dist/hooks/tokens.js"
    },
    "./hooks/defi": {
      "types": "./dist/hooks/defi.d.ts",
      "import": "./dist/hooks/defi.mjs",
      "require": "./dist/hooks/defi.js"
    },
    "./wallet": {
      "types": "./dist/wallet/index.d.ts",
      "import": "./dist/wallet/index.mjs",
      "require": "./dist/wallet/index.js"
    },
    "./wallet/detector": {
      "types": "./dist/wallet/detector.d.ts",
      "import": "./dist/wallet/detector.mjs",
      "require": "./dist/wallet/detector.js"
    },
    "./wallet/connection": {
      "types": "./dist/wallet/connection.d.ts",
      "import": "./dist/wallet/connection.mjs",
      "require": "./dist/wallet/connection.js"
    },
    "./wallet/mobile": {
      "types": "./dist/wallet/mobile.d.ts",
      "import": "./dist/wallet/mobile.mjs",
      "require": "./dist/wallet/mobile.js"
    },
    "./wallet/security": {
      "types": "./dist/wallet/security.d.ts",
      "import": "./dist/wallet/security.mjs",
      "require": "./dist/wallet/security.js"
    },
    "./wallet/verification": {
      "types": "./dist/wallet/verification.d.ts",
      "import": "./dist/wallet/verification.mjs",
      "require": "./dist/wallet/verification.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.mjs",
      "require": "./dist/types.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --check \"src/**/*.{ts,tsx}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "size": "echo \"Size analysis not yet configured\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GuiBibeau/photon.git",
    "directory": "packages/react"
  },
  "license": "MIT",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@photon/addresses": "workspace:*",
    "@photon/codecs": "workspace:*",
    "@photon/crypto": "workspace:*",
    "@photon/errors": "workspace:*",
    "@photon/rpc": "workspace:*",
    "@photon/signers": "workspace:*",
    "@photon/transaction-messages": "workspace:*",
    "@photon/transactions": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  }
}
