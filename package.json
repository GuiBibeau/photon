{
  "name": "photon-sdk",
  "version": "0.0.0",
  "private": true,
  "description": "A lightweight, zero-dependency TypeScript SDK for Solana using Web Standards",
  "repository": {
    "type": "git",
    "url": "https://github.com/GuiBibeau/photon.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:packages": "pnpm -r test",
    "test:packages:watch": "pnpm -r test:watch",
    "test:packages:coverage": "pnpm -r test:coverage",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "pnpm -r format",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "dev": "pnpm -r --parallel dev",
    "size": "pnpm -r size"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
