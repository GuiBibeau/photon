{
  "name": "photon-sdk",
  "version": "0.0.0",
  "private": true,
  "description": "A lightweight, zero-dependency TypeScript SDK for Solana using Web Standards",
  "repository": {
    "type": "git",
    "url": "https://github.com/GuiBibeau/photon.git"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "turbo run build",
    "test": "vitest run",
    "test:ci": "CI=true vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:packages": "pnpm -r test",
    "test:packages:watch": "pnpm -r test:watch",
    "test:packages:coverage": "pnpm -r test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --fix && pnpm -r lint:fix",
    "format": "turbo run format",
    "format:fix": "prettier --write . && pnpm -r format",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "size": "pnpm -r size",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4"
  }
}
